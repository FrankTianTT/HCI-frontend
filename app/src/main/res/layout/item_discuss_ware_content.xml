<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp">

            <TextView
                android:id="@+id/discuss_ware_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discuss_ware_item_title_example"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/discuss_ware_item_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:numStars="5"
                android:rating="@string/discuss_ware_item_rating_example"
                android:stepSize="1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/discuss_ware_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/discuss_ware_item_content_example"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/discuss_ware_item_reply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discuss_ware_item_reply_title_example"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/discuss_ware_item_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/discuss_ware_item_reply_example"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>